<%= render 'top/topnav' %>

<div class='start'>

  <div class="response">
      <div class="response-top">
        <h1>Previous Responses</h1>
      </div>
      <div class="response-bottom">
        <table id="table1">
            <thead>
            <tr>
                <th>To User:</th>
            </tr>
            </thead>

            <tbody>
              <tr>
                <% current_user.response_user_i.each do |response| %>
                    <td><%= response.email %></td>
              </tr>
                <% end %>
            </tbody>
        </table>
        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Body</th>
              <th colspan="3">Options</th>
            </tr>
          </thead>

          <tbody>
            <% @answers.each do |answer| %>
              <tr>
                <td><%= answer.title %></td>
                <td><%= answer.body %></td>
                <td><%= link_to 'Show', answer %></td>
                <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
                <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>



