<%= render 'top/topnav' %>


<div class="start">
  <div id="extra1">
    <div class="unanswered">
      <h1>Unanswered Questions</h1>
          <% @unanswered = @questions.no_answers %>
              <% if current_user.employee  %>
              <div class="tables"><table>
                  <thead>
                  <tr>
                      <th>Title</th>
                      <th>Category</th>
                      <th>Body</th>
                      <th>User email</th>
                      <th colspan="3">Options</th>
                  </tr>
                  </thead>

                  <tbody>
                  <% @unanswered.each do |question| %>
                      <tr>
                      <td><%= question.title %></td>
                      <td><%= question.category %></td>
                      <td><div class="table-body"><%= question.body %></div></td>
                      <td><%= question.user.email %></td>
                      <td><%= link_to 'Show', question %></td>
                      <td><%= link_to 'Edit', edit_question_path(question) %></td>
                      <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                  <% end %>
                  </tbody>
              </table></div>

              <br>

              <% else %>
              <div class="tables"><table>
                  <thead>
                  <tr>
                      <th>Title</th>
                      <th>Category</th>
                      <th>Body</th>
                      <th>User email</th>
                      <th colspan="3">Options</th>
                  </tr>
                  </thead>

                  <tbody>
                  <% @unanswered.each do |question| %>
                      <tr>
                      <% if question.user_id == current_user.id %>
                          <td><%= question.title %></td>
                          <td><%= question.category %></td>
                          <td><div class="table-body"><%= question.body %></div></td>
                          <td><%= question.user.email %></td>
                          <td><%= link_to 'Show', question %></td>
                          <td><%= link_to 'Edit', edit_question_path(question) %></td>
                          <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      <% end %>
                      </tr>
                  <% end %>
                  </tbody>
              </table></div>
              <% end %>
              <% if current_user.employee == false %>
              <div id="new-question-button-"><%= button_to 'New Question', new_question_path, method: :get %></div>
              <% end %>
        </div>     
  </div>

  <div class="answered">
    <h1>Answered Questions</h1>
        <% @answered = @questions.has_answers %>
        <% if current_user.employee  %>
          <table>
            <thead>
              <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Body</th>
                <th>User E-mail</th>
                <th colspan="3">Options</th>
              </tr>
            </thead>

            <tbody>
              <% @answered.each do |question| %>
                <tr>
                  <td><%= question.title %></td>
                  <td><%= question.category %></td>
                  <td><div class="table-body"><%= question.body %></div></td>
                  <td><%= question.user.email %></td>
                  <td><%= link_to 'Show', question %></td>
                  <td><%= link_to 'Edit', edit_question_path(question) %></td>
                  <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
        <% else %>
          <table>
            <thead>
              <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Body</th>
                <th>User email</th>
                <th colspan="3">Options</th>
              </tr>
            </thead>

            <tbody>
              <% @answered.each do |question| %>
                <tr>
                  <% if question.user_id == current_user.id %>
                    <td><%= question.title %></td>
                    <td><%= question.category %></td>
                    <td><div class="table-body"><%= question.body %></div></td>
                    <td><%= question.user.email %></td>
                    <td><%= link_to 'Show', question %></td>
                    <td><%= link_to 'Edit', edit_question_path(question) %></td>
                    <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
        </div>
    </div>
  </div>
</div>








  